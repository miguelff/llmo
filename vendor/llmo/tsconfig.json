{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES2015",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
