{
    "name": "llmo",
    "version": "1.0.0",
    "description": "LLM optimization system",
    "type": "module",
    "dependencies": {
        "@langchain/community": "^0.3.12",
        "@langchain/core": "^0.3.17",
        "@langchain/openai": "^0.3.11",
        "commander": "^12.1.0",
        "dotenv": "^16.4.5",
        "dotenv-expand": "^11.0.6",
        "jose": "^5.9.2",
        "langchain": "^0.3.5",
        "open": "^10.1.0",
        "openai": "^4.68.4",
        "pino": "^8.16.0",
        "pino-pretty": "11.3.0",
        "ts-results-es": "^4.2.0",
        "tslib": "^2.8.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@flydotio/dockerfile": "^0.5.9",
        "@flydotio/node-demo": "^0.2.1",
        "@types/node": "^22.7.5",
        "@types/pino": "^7.0.5",
        "chalk": "^5.3.0",
        "tsx": "^3.12.3",
        "typescript": "^5.6.3",
        "vitest": "^2.1.1"
    },
    "scripts": {
        "demo:cars": "tsx src/index.ts report -n ${QUERY_COUNT:-10} -c \"${CALLBACK_URL}\" -q \"coches seguros\" -C \"Mujeres, 45+, con hijos y nietos\" -r \"europe\" -b \"Volvo XC90\" | tee /tmp/demo_cars_$(date +%Y%m%d_%H%M%S).log",
        "dev": "tsx watch src/index.ts",
        "build:watch": "tsc -p tsconfig.json --watch",
        "build": "tsc -p tsconfig.json",
        "start": "node dist/index.js",
        "generate-token": "tsx script/generate-token.ts",
        "generate-step": "tsx bin/generateStep.ts",
        "step:question-formulation": "tsx bin/callQuestionFormulation.ts",
        "step:answer-analysis": "tsx bin/callAnswerAnalysis.ts",
        "step:cleaner": "tsx bin/callCleaner.ts",
        "step:report": "tsx bin/callReport.ts",
        "deploy": "fly deploy",
        "test": "vitest run",
        "test:ci": "pnpm run test"
    },
    "author": "Miguel Fern√°ndez <miguel@mff.io>",
    "license": "ISC"
}
