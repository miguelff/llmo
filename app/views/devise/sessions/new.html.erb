<div class="centered-container rounded-lg p-8 w-full max-w-lg mx-auto mt-10 bg-white border border-gray-200 dark:bg-gray-800 dark:border-gray-700">
  <h2 class="text-2xl font-bold text-gray-700 mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    <!-- Email Field -->
    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Password Field -->
    <div>
      <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <!-- Remember Me Checkbox (if enabled) -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
        <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div class="flex justify-end">
      <%= f.submit "Log in", class: "btn primary w-full lg:w-auto px-6 py-2 rounded-md bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>

  <!-- Devise Links -->
  <div class="mt-4 text-sm text-gray-500">
    <%= render "devise/shared/links" %>
  </div>
</div>