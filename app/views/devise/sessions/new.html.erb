<div class="centered-container rounded-lg p-8 w-full max-w-lg mx-auto mt-10 bg-white border border-zinc-200 dark:bg-zinc-900 dark:border-zinc-800">
  <h2 class="text-2xl font-bold text-zinc-950 dark:text-white mb-6">Log in to 
    <span class="underline underline-offset-3 decoration-8 decoration-primary-400 dark:decoration-primary-600">
      <%= link_to Rails.configuration.application_name, root_path, class: "text-zinc-950 dark:text-white" %>
    </span>
  </h2>
 
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    <!-- Email Field -->
    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-zinc-800" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-zinc-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
    </div>

    <!-- Password Field -->
    <div>
      <%= f.label :password, "Password", class: "block text-sm font-medium text-zinc-800" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full px-3 py-2 border border-zinc-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
    </div>

    <!-- Remember Me Checkbox (if enabled) -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-primary-600 border-zinc-300 rounded focus:ring-primary-500" %>
        <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-zinc-800" %>
      </div>
    <% end %>

    <!-- Submit Button -->
    <div class="flex justify-end">
      <%= f.submit "Log in", class: "btn primary w-full lg:w-auto px-6 py-2 rounded-md bg-primary-600 text-white hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
    </div>
  <% end %>

  <!-- Devise Links -->
  <div class="mt-4 text-sm text-zinc-500">
    <%= render "devise/shared/links" %>
  </div>
</div>