<div class="centered-container shadow-lg p-8 w-full max-w-lg mx-auto mt-10 bg-white border border-zinc-200 rounded-lg dark:bg-zinc-900 dark:border-zinc-800">
  <h2 class="text-2xl font-bold text-zinc-950 dark:text-white mb-6">Sign up to  
    <span class="underline underline-offset-3 decoration-8 decoration-primary-400 dark:decoration-primary-600">
      <%= link_to Rails.configuration.application_name, root_path, class: "text-zinc-950 dark:text-white" %>
    </span>
  </h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    <!-- Error Messages -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email Field -->
    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-zinc-800" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full px-3 py-2 border border-zinc-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
    </div>

    <!-- Password Field -->
    <div>
      <%= f.label :password, "Password", class: "block text-sm font-medium text-zinc-800" %>
      <% if @minimum_password_length %>
        <em class="text-xs text-zinc-500">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-zinc-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
    </div>

    <!-- Password Confirmation Field -->
    <div>
      <%= f.label :password_confirmation, "Password Confirmation", class: "block text-sm font-medium text-zinc-800" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-zinc-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500" %>
    </div>

    <!-- Submit Button -->
    <div class="flex justify-end">
      <%= f.submit "Sign up", class: "btn primary w-full lg:w-auto px-6 py-2 rounded-md bg-primary-600 text-white hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
    </div>
  <% end %>

  <!-- Devise Links -->
  <div class="mt-4 text-sm text-zinc-500">
    <%= render "devise/shared/links" %>
  </div>
</div>