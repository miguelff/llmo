
<div id="<%= dom_id report %>" class="block p-6 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
  <h5 class="status flex flex-row space-x-2 mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">    
      <%= report.query %>    
  </h5>

  <% if report.cohort.present? || report.brand_info.present? || report.region.present? %>
    <ul class="font-normal text-gray-700 dark:text-gray-400 mb-4">
      <li><%= report.cohort %></li>
      <li><%= report.brand_info %></li>
      <li><%= report.region %></li>
    </ul>
  <% end %>

  <%= turbo_stream_from(report) %>
  <%= render "reports/status", report: report %>
</div>