<%= form_with(model: report, class: "centered-container") do |form| %>

  <% if report.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :query, "Type a sample user query you want to benchmark" %>
    <%= form.text_area :query, rows: 4, placeholder: "Safest cars to carry kids" %>
  </div>

  <div class="flex flex-col space-y-4 transition-all duration-300 ease-in-out max-h-0 overflow-hidden opacity-0" id="advanced-options">
    <div>
      <%= form.label "advanced_settings[cohort]", "Enter a cohort description" %>
      <%= form.text_area "advanced_settings[cohort]", rows: 4, placeholder: "Single mom, 30-40, lives in SF, makes $80K+" %>
    </div>

    <div>
      <%= label_tag "advanced_settings[exhaustiveness]", "Choose the exhaustiveness of the report. The more exhaustive, the more user queries will be sampled during the analysis." %>
      <%= form.select "advanced_settings[exhaustiveness]", options_for_select(Report::EXHAUSTIVENESS_OPTIONS), {} %>    
    </div>
  </div>


  <div class="flex flex-row justify-between">
    <label class="flex justify-end cursor-pointer">
      <%= check_box_tag "advanced_settings[advanced]", "", false, class: "sr-only peer" %>
      <div class="relative w-11 h-6 bg-gray-200 rounded-full peer peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
      <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300">Advanced</span>
    </label>

    <%= form.submit "Generate report", class: "btn primary" %>
  </div>
<% end %>

<script>
document.getElementById('advanced_settings_advanced').addEventListener('change', function() {
  const advancedOptions = document.getElementById('advanced-options');
  if (this.checked) {
    advancedOptions.classList.remove('max-h-0', 'opacity-0');
    advancedOptions.classList.add('max-h-96', 'opacity-100');
  } else {
    advancedOptions.classList.remove('max-h-96', 'opacity-100');
    advancedOptions.classList.add('max-h-0', 'opacity-0');
  }
});
</script>