<div id="report-status">
    <% case report.status %>
    <% when "pending" %>
    <%= render "reports/status/pending", report: report %>
    <% when "processing" %>
    <%= render "reports/status/processing", report: report %>
    <% when "completed" %>
    <%= render "reports/status/completed", report: report %>
    <% when "failed" %>
    <%= render "reports/status/failed", report: report %>
    <% end %>
    
    <p class="mt-4 text-right text-sm">
        <% if report.failed? %>
        <%= link_to "Retry", retry_report_path(report), class: "text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-200" %>, or 
        <% end %> 
        <%= link_to "Create new report", new_report_path, class: "text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-200" %>
    </p>
</div>