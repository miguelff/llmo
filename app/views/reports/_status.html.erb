<div id="report-status">
    <% case report.status %>
    <% when "pending" %>
    <%= render "reports/status/pending", report: report %>
    <% when "processing" %>
    <%= render "reports/status/processing", report: report %>
    <% when "completed" %>
    <%= render "reports/status/completed", report: report %>
    <% when "failed" %>
    <%= render "reports/status/failed", report: report %>
    <% end %>
    <div class="mt-4 text-right text-sm">
        <%= link_to "Create another report", new_report_path, class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-200" %>
    </div>
</div>