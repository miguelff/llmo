          <button
            type="button"
            class="flex mx-3 text-sm bg-gray-800 rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 dark:focus:ring-gray-600"
            id="user-menu-button"
            aria-expanded="false"
            data-dropdown-toggle="dropdown"
            title="<%= current_user ? current_user.email : "You are not signed in" %>"
          >
            <span class="sr-only">Open user menu</span>
            <% if current_user.respond_to?(:avatar_url) %>
              <%= image_tag current_user.avatar_url, class: "w-8 h-8 rounded-full", alt: current_user.email %>
            <% else %>
              <%= image_tag "users/anonymous.png", class: "w-8 h-8 rounded-full", alt: "Anonymous user avatar" %>
            <% end %>
          </button>
          <!-- Dropdown menu -->
          <% if current_user %>
            <div
              class="hidden z-50 my-4 w-56 text-base list-none bg-white divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600 rounded-xl"
              id="dropdown"
            >
              <div class="py-3 px-4">                
                <span
                  class="block text-sm text-gray-900 truncate dark:text-white"
                  >
                  <%= current_user.email %>
                  </span
                >
              </div>

              <ul
                class="py-1 text-gray-700 dark:text-gray-300"
                aria-labelledby="dropdown"
              >
                <li>                
                  <%= link_to destroy_user_session_path, method: :delete, class: "block py-2 px-4 text-sm hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" do %>
                    Sign out
                  <% end %>                  
                </li>

                <li>
                  <%= link_to "Log out", destroy_user_session_path, class: "block py-2 px-4 text-sm hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white", data: { turbo_method: :delete } %>
                </li>
              </ul>
            </div>
          <% end %>
